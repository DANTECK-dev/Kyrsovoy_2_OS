<Window x:Class="Kyrsovoy_2_OS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kyrsovoy_2_OS"
        mc:Ignorable="d"
        Title="MainWindow"
        MinHeight="560"
        MinWidth="1100"
        Height="560"
        Width="1115">
    <Grid>
        <TabControl Height="auto">
            <TabItem Header="Процессы" Height="22" Margin="-2,0,-2,0" VerticalAlignment="Bottom">
                <Grid x:Name="Process_Grid" Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="4*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="139"></ColumnDefinition>
                            <ColumnDefinition Width="119"></ColumnDefinition>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="139"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="Button_Start_Processes" IsEnabled="True" Content="Запустить систему" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="auto" Height="20" MinWidth="120" MinHeight="20" Click="Button_Start_Processes_Click"/>
                        <Button x:Name="Button_Stop_Processes" IsEnabled="True" Grid.Row="1" Content="Остановить систему" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="auto" Height="20" MinWidth="120" MinHeight="20" Click="Button_Stop_Processes_Click"/>
                        <Button x:Name="Button_Clear_Processes" IsEnabled="True" Grid.Row="2" Content="Очистить" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="auto" Height="20" MinWidth="120" MinHeight="20" Click="Button_Clear_Processes_Click"/>
                        <Label Content="Приоритет" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="auto" Height="25" MinWidth="110" MinHeight="25"  FontSize="11"/>
                        <Label Content="Время выполнения" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="110" Height="25" MinWidth="110" MinHeight="25"  FontSize="11"/>
                        <Label Content="PID" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="auto" Height="25" MinWidth="110" MinHeight="25"  FontSize="11"/>
                        <Grid Grid.Column="2" Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <ComboBox x:Name="ComboBox_Priority" Grid.Column="0" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Width="auto" Height="auto" MinWidth="165" MinHeight="23" MaxHeight="500" MaxWidth="500" DropDownClosed="Process_control_algorithm_comboBox_DropDownClosed"/>
                            <TextBox x:Name="TextBox_Priority" Grid.Column="1" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Width="auto" Height="auto" MinWidth="165" MinHeight="23" MaxHeight="500" MaxWidth="500" TextAlignment="Center" TextChanged="TextBox_Priority_TextChanged"/>
                        </Grid>
                        <TextBox x:Name="TextBox_Exec_Time" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="auto" Height="auto" MinWidth="345" MinHeight="23" TextAlignment="Center" TextChanged="TextBox_Exec_Time_TextChanged"/>
                        <TextBox x:Name="TextBox_PID" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="auto" Height="auto" MinWidth="345" MinHeight="23" TextAlignment="Center" TextChanged="TextBox_PID_TextChanged"/>

                        <Button x:Name="Button_Create_Processes" IsEnabled="True" Grid.Row="0" Grid.RowSpan="2" Grid.Column="3" Content="Создать процесс" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="auto" Height="auto" MinWidth="120" MinHeight="40" Click="Button_Create_Processes_Click"/>
                        <Button x:Name="Button_Delete_Processes" IsEnabled="True" Grid.Row="2" Grid.Column="3" Content="Удалить процесс" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="auto" Height="20" MinWidth="120" MinHeight="20" Click="Button_Delete_Processes_Click"/>
                        
                        <Grid Grid.Column="4" Grid.Row="0" Grid.RowSpan="3">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="6*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Среднее время выполнения" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Label Content="Среднее время ожидания" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock x:Name="TextBlock_Avg_Exec_Time" Text="-" Grid.Row="0" FontSize="23" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
                            <TextBlock x:Name="TextBlock_Avg_Waiting_Time" Text="-" Grid.Row="1" FontSize="23"  Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="1">
                        <DataGrid x:Name="Process_DataGrid" ItemsSource="{Binding}" HeadersVisibility="All" RowHeaderWidth="25" Margin="5" Grid.Column="1" CanUserAddRows="False" CanUserReorderColumns ="False" SelectionMode="Single" EnableColumnVirtualization="True" AutomationProperties.IsRowHeader="True" AutomationProperties.IsColumnHeader="True" IsReadOnly="True"/>

                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Память">
                <Grid x:Name="Memory_Grid" Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="22"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="4*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="Memory_Process_DataGrid" Grid.Column="0" Margin="5"/>
                    <Grid Grid.Column="1" Margin="5" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="27"></RowDefinition>
                            <RowDefinition Height="10*"></RowDefinition>
                            <RowDefinition Height="32"></RowDefinition>
                            <RowDefinition Height="10*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Label Content="Карта памяти(1 ячейка - 16 байт)" Grid.Row="0"/>
                        <DataGrid x:Name="Memory_Map_DataGrid" Grid.Row="1"></DataGrid>
                        <Grid Grid.Row="2" Margin="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="10*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Адрес" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBox x:Name="Address_TextBox" Grid.Column="1" Text="0" IsEnabled="false" TextAlignment="Center" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" TextChanged="Address_TextBox_TextChanged" />
                            <Button x:Name="Address_Increment_Button" IsEnabled="false" FontFamily="Marlett" FontSize="20" Content="5" Grid.Column="2" Click="Address_Increment_Button_Click" Grid.ColumnSpan="2" HorizontalAlignment="Left" Width="26"/>
                            <Button x:Name="Address_Decrement_Button" IsEnabled="false" FontFamily="Marlett" FontSize="20" Content="6" Grid.Column="3" HorizontalAlignment="Left" Width="25" Click="Address_Decrement_Button_Click"/>
                            <Button x:Name="Address_Content_Button" IsEnabled="false" Content="Содержимое" Grid.Column="5" Click="Address_Content_Button_Click"/>
                        </Grid>
                        <DataGrid x:Name="Memory_Address_DataGrid" Grid.Row="3"></DataGrid>
                    </Grid>
                    <StatusBar x:Name="Memory_StatusBar" Grid.Row="2" Grid.ColumnSpan="2">
                        <StatusBarItem Content="Нет текущей команды"/>
                        <Separator/>
                        <StatusBarItem Content="Результат: "/>
                        <Separator/>
                        <StatusBarItem Content="Операций ввода/вывода: 0"/>
                        <Separator/>
                        <StatusBarItem Content="Текущая команда: 0"/>
                    </StatusBar>
                </Grid>
            </TabItem>
            <TabItem Header="Диск">
                <Grid x:Name="Disk_Grid" Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="22"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="4*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="26"/>
                            <RowDefinition Height="10*"/>
                        </Grid.RowDefinitions>
                        <Label Content="Каталог" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        <DataGrid x:Name="Disk_Catalog_DataGrid" Grid.Row="1"/>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10*"></RowDefinition>
                            <RowDefinition Height="32"></RowDefinition>
                            <RowDefinition Height="10*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="2.5*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Label Content="Имя файла" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <Button x:Name="Create_File_Button" IsEnabled="false" Content="Создать" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="70"  MinHeight="20" Click="Create_File_Button_Click"/>
                                    <Button x:Name="Delete_File_Button" IsEnabled="false" Content="Удалить" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="70"  MinHeight="20" Click="Delete_File_Button_Click"/>
                                    <Button x:Name="Read_File_Button" IsEnabled="false" Content="Прочитать" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="70"  MinHeight="20" Click="Read_File_Button_Click"/>
                                    <Button x:Name="Edit_File_Button" IsEnabled="false" Content="Изменить" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="70"  MinHeight="20" Click="Edit_File_Button_Click"/>
                                </Grid>
                                <TextBox Grid.Row="1" Margin="5"/>
                            </Grid>
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="7.5*"/>
                                </Grid.RowDefinitions>
                                <Label Content="Карта диска" Grid.Row="0"/>
                                <DataGrid x:Name="Disk_Map_DataGrid" Grid.Row="1" Margin="5"></DataGrid>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="1" Margin="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="10*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Сектор" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBox x:Name="Sector_TextBox" Grid.Column="1" Text="0" IsEnabled="false" TextAlignment="Center" TextChanged="Sector_TextBox_TextChanged" />
                            <Button x:Name="Sector_Increment_Button" IsEnabled="false" FontFamily="Marlett" FontSize="20" Content="5" Grid.Column="2" Click="Sector_Increment_Button_Click"/>
                            <Button x:Name="Sector_Decrement_Button" IsEnabled="false" FontFamily="Marlett" FontSize="20" Content="6" Grid.Column="3" Click="Sector_Decrement_Button_Click"/>
                            <Button x:Name="Sector_Content_Button" IsEnabled="false" Content="Содержимое" Grid.Column="5" Click="Sector_Content_Button_Click"/>
                        </Grid>
                        <DataGrid x:Name="Disk_Sector_DataGrid" Grid.Row="2" Margin="5"></DataGrid>
                    </Grid>
                    <StatusBar x:Name="Disk_StatusBar" Grid.Row="2" Grid.ColumnSpan="2">
                        <StatusBarItem Content="Нет текущей команды"/>
                        <Separator/>
                        <StatusBarItem Content="Результат: "/>
                        <Separator/>
                        <StatusBarItem Content="Операций ввода/вывода: 0"/>
                        <Separator/>
                        <StatusBarItem Content="Текущая команда: 0"/>
                    </StatusBar>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
